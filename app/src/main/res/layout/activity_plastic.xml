<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="#FFFFFF" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="500px"
        android:layout_height="300px"
        android:layout_gravity="center_vertical|center_horizontal"
        android:src="@drawable/recycle" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:gravity="center"
        android:text="Plastic vs Glass Bottles"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonreturn"
        android:background="#49B86E"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:layout_gravity="center_vertical|center_horizontal"
        android:text="Return"
        android:textSize="17sp"
        android:textColor="#FFFFFF"
        android:textAllCaps="false" />
        <Space
            android:layout_width="1dp"
            android:layout_height="50dp" />
        <ImageView
            android:id="@+id/plastic"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:src="@drawable/Plastic" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:gravity="center"
            android:text="Plastic Bottle Detected"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>


    <ImageView
        android:id="@+id/imageView0"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:src="@drawable/vandy" />

</RelativeLayout>